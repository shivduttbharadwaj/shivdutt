		<DefaultAction ID="Action1">
			<Description>
				<PreLink>Click </PreLink>
				<Link>here</Link>
				<PostLink> to deploy the IBM BigFix Relay and Client 9.2.15 upgrade.</PostLink>
			</Description>
			<ActionScript MIMEType="application/x-Fixlet-Windows-Shell"><![CDATA[if {((exists match (regex "Red Hat.* (5|6|7)") of name of it) AND (architecture of it = "x86_64")) of operating system}
	prefetch BESRelayUpgrade.rpm sha1:bb2273fc8c2b32760a9d39e19d146ca1c883819a size:5646706 http://software.bigfix.com/download/bes/92/BESRelay-9.2.15.15-rhe5.x86_64.rpm sha256:aa51f15e1b703612208ab73eee2d2bddf241cc379700e113f4c0d55b68998868
elseif  {((exists match (regex "Red Hat.* (5|6)") of name of it) AND (exists match (regex "^i[6-9]86$") of architecture of it)) of operating system}
	prefetch BESRelayUpgrade.rpm sha1:d16a4242f6d0727e28eecb207db065afec44b27a size:5119237 http://software.bigfix.com/download/bes/92/BESRelay-9.2.15.15-rhe5.i686.rpm sha256:d1a6276f274c491adf19be45552132fc806a5c2bc4341fb73863d6a368c3975f
else
	// No Known Configuration
	continue if false
endif
continue if {exists file "__Download/BESRelayUpgrade.rpm"}
folder delete "{client folder of current site as string}/__Local/Upgrade"
// If the next line fails, there is not enough free space to complete this action
continue if {16375374 < free space of drive of client folder of current site}
folder create "{client folder of current site as string}/__Local/Upgrade"
move __Download/BESRelayUpgrade.rpm __Local/Upgrade/BESRelayUpgrade.rpm
parameter "RunningRelay"="{exists running service "BESRelay"}"
wait /etc/init.d/besrelay stop
wait rpm -U __Local/Upgrade/BESRelayUpgrade.rpm
if {"True" = parameter "RunningRelay"}
	wait /etc/init.d/besrelay start_skipclientrestart
	parameter "startTime" = "{apparent registration server time}"
	pause while {(apparent registration server time - time(parameter "startTime")) < (30 * second)}
	relay select
	// Fails here if a previously running relay did not start up
	continue if {exists running service "BESRelay"}
endif
continue if {exit code of action = 0 AND version of relay service = "9.2.15.15"}
delete __Local/Upgrade/BESRelayUpgrade.rpm
if {version of client < "9.2.15.15"}
	if {((exists match (regex "Red Hat.* (5|6|7)") of name of it) AND (architecture of it = "x86_64")) of operating system}
		prefetch BESClientUpgrade.rpm sha1:4f06b47dade86610018bf13b37f17b50a5ede237 size:16375374 http://software.bigfix.com/download/bes/92/BESAgent-9.2.15.15-rhe5.x86_64.rpm sha256:23e98236eb77041aa3c2b3bb7e6673f3527010e9d920357f524cdf8023a0b872
	elseif  {((exists match (regex "Red Hat.* (5|6)") of name of it) AND (exists match (regex "^i[6-9]86$") of architecture of it)) of operating system}
		prefetch BESClientUpgrade.rpm sha1:e4fdfd182434031414778a36937db6766319203e size:15832539 http://software.bigfix.com/download/bes/92/BESAgent-9.2.15.15-rhe5.i686.rpm sha256:b2d6285b1bb2c1009f9e7c6dddcbec82410159868a88a521c1a721eddc14416f
	else
		// No Known Configuration
		continue if false
	endif
	continue if {exists file "__Download/BESClientUpgrade.rpm"}
	move __Download/BESClientUpgrade.rpm __Local/Upgrade/BESClientUpgrade.rpm
	delete __createfile
	createfile until __EOF
#!/bin/sh
/bin/rpm -U __Local/Upgrade/BESClientUpgrade.rpm
/etc/init.d/besclient start
/bin/rm -f __Local/Upgrade/BESClientUpgrade.rpm
__EOF
	move __createfile __Local/Upgrade/besclientupgrade
	// The following line may show as Failed if the command executes a restart of the client - This is normal behaviour on success
	wait /bin/sh __Local/Upgrade/besclientupgrade
endif]]></ActionScript>
			<SuccessCriteria Option="CustomRelevance"><![CDATA[(not exists relay service) OR (version of relay service < "9.2.15.15") OR (version of client < "9.2.15.15")]]></SuccessCriteria>
