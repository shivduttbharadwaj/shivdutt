		<DefaultAction ID="Action1">
			<Description>
				<PreLink>Click </PreLink>
				<Link>here</Link>
				<PostLink> to deploy the IBM Endpoint Manager Relay and Client 9.2.1 upgrade.</PostLink>
			</Description>
			<ActionScript MIMEType="application/x-Fixlet-Windows-Shell"><![CDATA[if {type of main processor contains "i386"}
	// Solaris 10 x86
	prefetch BESRelayUpgrade.pkg sha1:442e752869c6fc4890ed8f33c9493c7d9f19074b size:24360448 http://software.bigfix.com/download/bes/92/BESRelay-9.2.1.48.x86_sol10.pkg sha256:19019b433f22a4640ca67e43b4090d2f49d4f2c8e9858237d791bfb8d2428d60
elseif {type of main processor contains "sparc"}
	// Solaris 10 SPARC
	prefetch BESRelayUpgrade.pkg sha1:59a2254fe24bd778029678d9ff1b05e93f2447bc size:28337664 http://software.bigfix.com/download/bes/92/BESRelay-9.2.1.48.sparc_sol10.pkg sha256:84ccd5377d116080e86f1a5bffb2b021109d37c7f870219764074f3de69e03e8
else
	// No Known Configuration
	continue if false
endif
continue if {exists file "__Download/BESRelayUpgrade.pkg"}
folder delete "{client folder of current site as string}/__Local/Upgrade"
// If the next line fails, there is not enough free space to complete this action
continue if {60722688 < free space of drive of client folder of current site}
folder create "{client folder of current site as string}/__Local/Upgrade"
move __Download/BESRelayUpgrade.pkg __Local/Upgrade/BESRelayUpgrade.pkg
parameter "RunningRelay"="{exists running service "BESRelay"}"
// Create solaris_admin_file for both client and relay upgrade
delete __createfile
createfile until __EOF
mail=
instance=overwrite
partial=nocheck
runlevel=nocheck
idepend=nocheck
space=ask
setuid=nocheck
conflict=nocheck
action=nocheck
basedir=default
__EOF
move __createfile __Local/Upgrade/solaris_admin_file
delete __createfile
createfile until __EOF
#!/bin/sh
/usr/sbin/pkgrm -a __Local/Upgrade/solaris_admin_file -n BESRelay
if [ -f /etc/zones/index ]; then
   # system supports Solaris zones
   ZONE_ARG="-G"
else
   # system does not support Solaris zones
   ZONE_ARG=
fi
/usr/sbin/pkgadd $ZONE_ARG -a __Local/Upgrade/solaris_admin_file -n -d __Local/Upgrade/BESRelayUpgrade.pkg BESRelay
__EOF
move __createfile __Local/Upgrade/besrelayupgrade
wait /bin/sh __Local/Upgrade/besrelayupgrade
if {"True" = parameter "RunningRelay"}
	wait /etc/init.d/besrelay start_skipclientrestart
	parameter "startTime" = "{apparent registration server time}"
	pause while {(apparent registration server time - time(parameter "startTime")) < (30 * second)}
	relay select
	// Fails here if a previously running relay did not start up
	continue if {exists running service "BESRelay"}
endif
continue if {version of relay service = "9.2.1.48"}
delete __Local/Upgrade/besrelayupgrade
delete __Local/Upgrade/BESRelayUpgrade.pkg
if {version of client < "9.2.1.48"}
	if {name of operating system contains "5.11"}
		if {type of main processor contains "i386"}
			prefetch BESClientUpgrade.pkg sha1:6b9094373fae43369f052689481d7e95801d8c1d size:60722688 http://software.bigfix.com/download/bes/92/BESAgent-9.2.1.48.x86_sol11.pkg sha256:6aa19628cd5ddfd20b47608b0b9a72c1e8e584dbd1fdff6d5734989e8995a28f
		elseif {type of main processor contains "sparc"}
			prefetch BESClientUpgrade.pkg sha1:9e283aa6bb4cce9f1eeec00df733ff606efc9c40 size:51854336 http://software.bigfix.com/download/bes/92/BESAgent-9.2.1.48.sparc_sol11.pkg sha256:ffc8bb7d9536c8bb8cb01dfd02bd127a2f57afb5ae67965efda509b056c39965
		endif
	elseif {name of operating system contains "5.10"}
		if {type of main processor contains "i386"}
			prefetch BESClientUpgrade.pkg sha1:fb8b883e532e44c923219bca0f9e669c286e605c size:43334144 http://software.bigfix.com/download/bes/92/BESAgent-9.2.1.48.x86_sol10.pkg sha256:ef17a8c53f169961c79606fdd4ae37e2b85b2e4cd5d614cec2212a418fc53d9b
		elseif {type of main processor contains "sparc"}
			prefetch BESClientUpgrade.pkg sha1:509fe28b5d563fde14d41ac11d21ed1d3b4abdfc size:50465280 http://software.bigfix.com/download/bes/92/BESAgent-9.2.1.48.sparc_sol10.pkg sha256:52fc2b6818a7fc035d94be20d946b1e6fcba5d568e746f05b02ced3669997007
		endif
	else
		// No Known Configuration
		continue if false
	endif
	continue if {exists file "__Download/BESClientUpgrade.pkg"}
	move __Download/BESClientUpgrade.pkg __Local/Upgrade/BESClientUpgrade.pkg
	delete __appendfile
	appendfile #!/bin/sh
	if {version of client = "9.1"}
		appendfile /usr/sbin/svccfg delete -f BESClient
		appendfile /etc/init.d/besclient stop
	endif
	appendfile /usr/sbin/pkgrm -a __Local/Upgrade/solaris_admin_file -n BESagent
	appendfile if [ -f /etc/zones/index ]; then
	appendfile     # system supports Solaris zones
	appendfile     ZONE_ARG="-G"
	appendfile else
	appendfile     # system does not support Solaris zones
	appendfile     ZONE_ARG=
	appendfile fi
	appendfile /usr/sbin/pkgadd $ZONE_ARG -a __Local/Upgrade/solaris_admin_file -n -d __Local/Upgrade/BESClientUpgrade.pkg BESagent
	appendfile /bin/rm -f __Local/Upgrade/BESClientUpgrade.pkg
	appendfile /bin/rm -f __Local/Upgrade/solaris_admin_file
	move __appendfile __Local/Upgrade/besclientupgrade
	// The following line may show as Failed if the command executes a restart of the client - This is normal behaviour on success
	wait /bin/sh __Local/Upgrade/besclientupgrade
endif]]></ActionScript>
			<SuccessCriteria Option="CustomRelevance"><![CDATA[(not exists relay service) OR (version of relay service < "9.2.1.48") OR (version of client < "9.2.1.48")]]></SuccessCriteria>
