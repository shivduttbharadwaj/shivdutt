waithidden reg add "HKEY_LOCAL_MACHINE\SOFTWARE\Microsoft\.NETFramework\v4.0.30319" /v "SchUseStrongCrypto" /t REG_DWORD /d 1 /f /reg:64
endif

action requires restart "d42a7a7b618c184f9b2718796c08bd1841614e28"
</ActionScript>
